            <Button fx:id="groupChatBtn" layoutX="7.0" layoutY="4.0" prefHeight="26.0" prefWidth="160.0" styleClass="button" text="General Chat" />
            <ListView fx:id="messagesView" layoutX="174.0" layoutY="39.0" prefHeight="480.0" prefWidth="687.0" />
      </children>
    </AnchorPane>
  </children>
</VBox>
