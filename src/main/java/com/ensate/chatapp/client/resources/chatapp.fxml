  <children>
      <AnchorPane maxHeight="606.0" maxWidth="868.0" prefHeight="606.0" prefWidth="868.0" styleClass="body" VBox.vgrow="ALWAYS">
      <children>
          <Button fx:id="sendBtn" layoutX="777.0" layoutY="524.0" prefHeight="40.0" prefWidth="85.0" styleClass="button" text="Envoyer" textAlignment="CENTER" wrapText="true">
               <font>
                  <Font name="Iosevka" size="15.0" />
                </font>
            </Button>
            <TextField fx:id="message" layoutX="174.0" layoutY="524.0" prefHeight="40.0" prefWidth="599.0" promptText="Message ..." styleClass="text-field" />
            <ListView fx:id="connectedView" layoutX="7.0" layoutY="66.0" prefHeight="498.0" prefWidth="160.0" styleClass="chatArea" />
            <TextField fx:id="search" layoutX="7.0" layoutY="35.0" prefHeight="26.0" prefWidth="160.0" promptText="Search" styleClass="text-field" />
            <Button fx:id="discBtn" layoutX="830.0" layoutY="4.0" mnemonicParsing="false" prefHeight="24.0" prefWidth="27.0" styleClass="button" text="" />
