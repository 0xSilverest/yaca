<VBox maxHeight="-Infinity" maxWidth="-Infinity" 
    minHeight="-Infinity" minWidth="-Infinity" 
    prefHeight="420.0" prefWidth="361.0" 
    xmlns="http://javafx.com/javafx/16" 
    xmlns:fx="http://javafx.com/fxml/1" 
    stylesheets="@style.css" 
    fx:controller="com.ensate.chatapp.client.controller.LoginController">
   <children>
      <AnchorPane styleClass='body' prefHeight="465.0" prefWidth="434.0" >
         <children>
