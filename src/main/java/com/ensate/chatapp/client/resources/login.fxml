                 layoutX="33.0" layoutY="222.0" 
                 prefHeight="44.0" prefWidth="304.0" 
                 promptText="mot de passe" />
             <CheckBox styleClass='text' 
                 layoutX="33.0" layoutY="285.0" 
                 mnemonicParsing="false" text="Se rappeler" />
             <Button styleClass='button' fx:id="loginBtn"
                 layoutX="33.0" layoutY="312.0" 
                 mnemonicParsing="true" 
                 prefHeight="38.0" prefWidth="147.0" 
                 text="_Se Connecter" />
